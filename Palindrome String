/*https://practice.geeksforgeeks.org/problems/palindrome-string0817/1*/
class Solution {
    int isPalindrome(String S) {
        // code here
        int flag=1;
        int n=S.length();
        for(int i=0;i<n;i++){
            if(S.charAt(i) != S.charAt(n-i-1))
            {
                flag=0;
                break;
            }
        }
        return flag;
    }
};
